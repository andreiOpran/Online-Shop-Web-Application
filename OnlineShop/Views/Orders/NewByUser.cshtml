@model OnlineShop.Models.Order

<div class="card border-primary shadow-sm mt-4" style="max-width: 600px; margin: auto;">
    <div class="card-header text-white text-center" style="background-color: rgba(37, 117, 252, 0.9);">
        <h4 class="mb-0">Place Order</h4>
    </div>

    <div class="card-body">
        <form asp-controller="Orders" asp-action="PlaceOrderByUser" method="post">
            <input type="hidden" asp-for="CartId" />

            <div class="form-group mt-3">
                <label asp-for="PaymentMethod" class="fw-bold">
                    <i class="bi bi-wallet2"></i> Payment Method
                </label>
                <select asp-for="PaymentMethod" class="form-select">
                    <option value="" disabled selected>Select payment method</option>
                    <option value="Cash">Cash</option>
                    <option value="Card">Card</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ShippingAddress" class="fw-bold">
                    <i class="bi bi-house"></i> Shipping Address
                </label>
                <textarea asp-for="ShippingAddress" class="form-control"
                          placeholder="Enter your shipping address"></textarea>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Place Order
                </button>
            </div>
        </form>
    </div>
</div>
